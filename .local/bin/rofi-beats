#!/bin/sh

# credits: https://github.com/Carbon-Bl4ck/Rofi-Beats

# add more args here according to preference
ARGS="--volume=20 --shuffle --no-video"

notification() {
	notify-send "Playing now: $@"
}

menu() {
	printf "1. lofi girl\n"
	printf "2. chillhop\n"
	printf "3. coffe shop radio\n"
	printf "4. space lofi\n"
	printf "5. osu!playlist\n"
	printf "6. ayayaJAM\n"
	printf "7. nuke's BANGERS\n"
	printf "8. prime's BANGERS\n"
}

main() {
	choice=$(menu | rofi -dmenu -p "(Í¡ Í¡Â° Íœ ã¤ Í¡Í¡Â°)â˜•ï¸" | cut -d. -f1)

