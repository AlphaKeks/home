#!/bin/sh

alias ls="/bin/ls --color=auto -hl"
alias l="exa -l --icons"
alias la="exa -al --icons"

alias clear="tput reset"
alias cls="clear && neofetch"

alias mkdir="mkdir -p"
alias grep="grep --color=auto"
alias rm="rm -I"
alias fucking="sudo"

alias cya="shutdown now"
alias remove_orphans="fucking pacman -R \$(pacman -Qtdq)"

alias ..="cd .."
alias .2="cd ../.."
alias .3="cd ../../.."
alias .4="cd ../../../.."
alias .5="cd ../../../../.."

alias vi="/bin/vim"
alias vim="/usr/bin/nvim"
alias nvim="/usr/bin/nvim --clean"
alias lg="lazygit"
alias dev="source $HOME/.local/bin/scripts/dev.sh"
alias g="git"
alias gs="git status"
alias ga="git add"
alias gc="git commit"
alias gca="git commit -am"
alias gb="git branch"
alias gw="git worktree"
alias gp="git pull"
alias gd="git diff"
alias gl="git log"
alias cb="cargo build"
alias cbr="cargo build --release"
alias cr="cargo run"
alias crr="cargo run --release"

ct() {
	cargo test $@ -- --nocapture
}

alias ssh:schnose="ssh max@schnose"
alias ssh:schnose_google="ssh alpha@google_schnose"

alias pack="tar -czvf"
alias analyze_disk="ncdu"
alias lc="tokei"

replace_last_character_of_file() {
	sed -i "\$ s/.\$/$2/" $1
}

merge_json_arrays() {
	jq -s add $1 $2 | jq "unique" -c
}

ts-init() {
	npm init -y
	npm i -D typescript ts-node
	cp $HOME/.config/tsconfig.json ./
	mkdir scr dist
	touch src/main.ts
}
