# https://github.com/AlphaKeks

# Launcher
super + @space
	rofi -show drun

# Terminal
super + Return
	$TERMINAL

# Browser
super + b
	$BROWSER

# Filemanager
super + e
	thunar

# Music
super + m
	~/.local/bin/rofi-beats

# Reload sxhkd
super + Escape
	pkill -USR1 -x sxhkd

# close and kill
super + q
	bspc node -c

#
# state/flags
#

# set the window state
super + {t, f, shift + f}
	bspc node -t {tiled,floating,fullscreen}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} focused:^{1-9,10}
