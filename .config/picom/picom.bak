# https://github.com/AlphaKeks

# General
daemon = true
experimental-backends = true
backend = "glx";
vsync = false;
mark-wmwin-focused = true;
mark-ovredir-focused = true;
detect-rounded-corners = true;
detect-client-opacity = true;
unredir-if-possible = false;
detect-transient = true;
detect-client-leader = true;
use-damage = false;
log-level = "info";
wintypes:
{
  normal = { fade = false; shadow = false; }
  tooltip = { fade = false; shadow = true; opacity = 0.75; focus = true; full-shadow = false; };
  dock = { shadow = false; }
  dnd = { shadow = false; }
  popup_menu = { opacity = 0.8; }
  dropdown_menu = { opacity = 0.8; }
};

# Animations
transition-length = 100
transition-pow-x = 0.1
transition-pow-y = 0.1
transition-pow-w = 0.1
transition-pow-h = 0.1
size-transition = true

# Corners
corner-radius = 10;
rounded-corners-exclude = [
  "class_g = 'polybar'",
  "class_g = 'Polybar'",
  "class_g = 'csgo_linux64'",
  "class_g = 'rofi'",
  "class_g = 'Rofi'",
	"class_g = 'osu!'",
	"class_g = 'Dunst'",
	"!_PICOM_CORNERS@:32c = 1"
];
round-borders = 10;
round-borders-exclude = [
  "class_g = 'rofi'",
  "class_g = 'Rofi'",
  "class_g = 'polybar'",
  "class_g = 'Polybar'",
	"class_g = 'osu!'",
	"class_g = 'Dunst'"
];

# Shadows
shadow = true;
shadow-radius = 15;
shadow-opacity = 0.85;
shadow-offset-x = -12;
shadow-offset-y = -12;
shadow-exclude = [
  "name = 'Notification'",
  "class_g = 'Conky'",
  "class_g ?= 'Notify-osd'",
  "class_g = 'Cairo-clock'",
  "class_g = 'slop'",
  "class_g = 'Polybar'",
  "_GTK_FRAME_EXTENTS@:c",
  "class_g = 'Rofi'",
  "class_g = 'rofi'",
];

# Fading
fading = false;
fade-in-step = 0.03;
fade-out-step = 0.03;

# Opacity
inactive-opacity = 0.95;
frame-opacity = 1.0;
popup_menu = { opacity = 1.0; }
dropdown_menu = { opacity = 1.0; }
inactive-opacity-override = false;
active-opacity = 1.0;
inactive-dim = 0.2
focus-exclude = [];
opacity-rule = [
	"85:class_g = 'Org.gnome.Nautilus'",
	"75:class_g = 'Conky'",
	"75:class_g = 'Dunst'",
	"85:class_g = 'obsidian'",
	"85:class_g = 'inkdrop'",
];

# Blur
blur-method = "dual_kawase";
blur-size = 12
blur-background = true;
blur-background-frame = false;
blur-background-fixed = false;
blur-kern = "3x3box";
blur-background-exclude = [
  "class_g = 'Rofi'",
  "class_g = 'rofi'",
  "class_g = 'polybar'",
  "class_g = 'Polybar'",
  "class_g = 'Screenkey'",
  "class_g = 'Discover-overlay'",
  "_GTK_FRAME_EXTENTS@:c"
];
