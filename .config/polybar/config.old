; modules-right = cpu memory xmr volume date
;
; tray-position = right

;===== left =====;
[bar/left]
monitor = DisplayPort-0
width = 300
height = 24
offset-x = 16
offset-y = 16
radius = 10
fixed-center = true
bottom = false
separator = |
line-size = 2

background = ${colors.background}
foreground = ${colors.foreground}

wm-restack = bspwm
override-redirect = false

enable-ipc = true

border-size = 0
padding-left = 2
padding-right = 4
module-margin-left = 4
module-margin-right = 4

font-0 = ${colors.font-normal}
font-1 = ${colors.font-icons}
font-2 = ${colors.font-awesome}

modules-left = bspwm mpv

;===== middle =====;
[bar/middle]
monitor = DisplayPort-0
width = 1200
height = 24
offset-x = 360
offset-y = 16
radius = 10
fixed-center = true
bottom = false
separator = |
line-size = 2

background = ${colors.background}
foreground = ${colors.foreground}

wm-restack = bspwm
override-redirect = false

enable-ipc = true

border-size = 0
padding-left = 4
padding-right = 4
module-margin-left = 4
module-margin-right = 4

font-0 = ${colors.font-normal}
font-1 = ${colors.font-icons}
font-2 = ${colors.font-awesome}

modules-left = cpu memory
modules-center = xwindow

tray-position = right

;===== right =====;
[bar/right]
monitor = DisplayPort-0
width = 300
height = 24
offset-x = 1604
offset-y = 16
radius = 10
fixed-center = true
bottom = false
separator = |
line-size = 2

background = ${colors.background}
foreground = ${colors.foreground}

wm-restack = bspwm
override-redirect = false

enable-ipc = true

border-size = 0
padding-left = 2
padding-right = 2
module-margin-left = 2
module-margin-right = 2

font-0 = ${colors.font-normal}
font-1 = ${colors.font-icons}
font-2 = ${colors.font-awesome}

modules-left = volume
modules-center = xmr
modules-right = date

;===== module bspwm =====;
[module/bspwm]
type = internal/bspwm

label-focused = %name%
label-focused-background = ${colors.background}
label-focused-underline= ${colors.primary}
label-focused-padding = 1

label-occupied = %name%
label-occupied-padding = 1

label-urgent = %name%
label-urgent-background = ${colors.alert}
label-urgent-padding = 1

label-empty = %name%
label-empty-foreground = ${colors.disabled}
label-empty-padding = 1

;===== module cpu =====;
[module/cpu]
type = internal/cpu
interval = 2

format-background = ${colors.background}
format-foreground = ${colors.foreground}
format-prefix = "ï‹›  "

label = %percentage%%

;===== module memory =====;
[module/memory]
type = internal/memory
interval = 2

format-background = ${colors.background}
format-foreground = ${colors.foreground}
format-prefix = "ï‡€  "

label = %percentage_used%%

;===== module date =====;
[module/date]
type = internal/date
date = %d/%m/%Y
time = %H:%M

label = %time% [%date%] 

;===== module volume =====;
[module/volume]
type = internal/pulseaudio
sink = alsa_output.pci-0000_0e_00.4.analog-stereo.monitor
use-ui-max = false
interval = 5

label-muted = ðŸ”‡ muted
label-muted-foreground = #666
ramp-volume-0 = ðŸ”ˆ
ramp-volume-1 = ðŸ”‰
ramp-volume-2 = ðŸ”Š

format-volume = <ramp-volume> <label-volume>

click-right = pavucontrol

;===== module xwindow =====;
[module/xwindow]
type = internal/xwindow

label = %title%
label-maxlen = 69

format-foreground = ${colors.foreground}
format-background = ${colors.background}

;===== module mpv =====;
[module/mpv]
type = custom/script
exec = $CFG/polybar/scripts/mpv.sh
interval = 1
format-prefix = "ðŸŽ¶  "
format-foreground = ${colors.primary}
label-foreground = ${colors.primary}
click-left = echo 'cycle pause' | socat - /tmp/mpvsocket
click-right = echo 'cycle mute' | socat - /tmp/mpvsocket

;===== module xmr =====;
[module/xmr]
type = custom/script
exec = $CFG/polybar/scripts/xmr.py
interval = 1
